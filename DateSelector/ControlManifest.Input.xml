<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="DateSelector" constructor="DateSelector" version="1.0.0" display-name-key="DateSelector" description-key="DateSelector PCF control that sets a datetime field based off user inut. JC 2024" control-type="standard">
    <!--external-service-usage node declares whether this 3rd party PCF control is using external service or not, if yes, this control will be considered as premium and please also add the external domain it is using.
    If it is not using any external service, please set the enabled="false" and DO NOT add any domain below. The "enabled" will be false by default.
    Example1:
      <external-service-usage enabled="true">
        <domain>www.Microsoft.com</domain>
      </external-service-usage>
    Example2:
      <external-service-usage enabled="false">
      </external-service-usage>
    -->
    <external-service-usage enabled="false">
      <!--UNCOMMENT TO ADD EXTERNAL DOMAINS
      <domain></domain>
      <domain></domain>
      -->
    </external-service-usage>
    <!-- property node identifies a specific, configurable piece of data that the control expects from CDS -->
    <property name="numberOfYears" display-name-key="NumberOfYears_Display_Key" description-key="Years to apply to control, input value will display X number of years in the selector." of-type="Whole.None" usage="input" required="false" />
    <property name="dayAndTimeOutputValue" display-name-key="dayAndTimeOutputValue_Display_Key" description-key="Will save Date And Time in control." of-type="DateAndTime.DateAndTime" usage="bound" required="true" />
    <property name="isDayOnly" display-name-key="DayOnly_Display_Key" description-key="True means day only, false means Date and Time should be shown." of-type="TwoOptions" usage="input" required="false" />

      <type-group name="Dates">
        <type>DateAndTime.DateAndTime</type>
        <type>DateAndTime.DateOnly</type>
      </type-group>
    <resources>
      <code path="index.ts" order="1"/>
      <css path="css/customCSS.css" order="1" />
    </resources>      
    <feature-usage>
      <uses-feature name="Utility" required="true" />
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>  
  </control>
</manifest>
